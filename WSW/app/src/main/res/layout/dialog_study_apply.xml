<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_study_apply"
    android:layout_width="292dp"
    android:layout_height="415dp"
    android:background="@drawable/dialog_green"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/apply_dialog"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/Text12_Medium"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:textStyle="bold"
            android:text="@string/to_do_apply"
            android:textColor="@color/white"/>

        <Button
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginEnd="14dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/exit" />
    </RelativeLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F2"
        app:layout_constraintBottom_toBottomOf="@id/apply_dialog" />

    <RelativeLayout
        android:id="@+id/inner_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/inner_box_white"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="67dp"
        android:padding="5dp">

        <TextView
            style="@style/Text12_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" · 모각코 가능 요일(5일 이상), 시간대\n
· 한달간 공부할 내용 간략한 계획\n
 위의 두 가지 사항 포함해서 지원서 작성해주세요!"
            android:textColor="#DCDFDA"/>

    </RelativeLayout>

    <Button
        style="@style/Button"
        android:backgroundTint="@color/text_green"
        android:layout_width="83dp"
        android:layout_height="36dp"
        android:text="@string/go_to_apply"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/inner_dialog"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>