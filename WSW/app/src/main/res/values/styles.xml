<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 홈화면 타이틀바 & 타이틀 텍스트 -->
    <style name="HomeTitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">28dp</item>
        <item name="android:paddingRight">31dp</item>
    </style>

    <style name="HomeTitleText">
        <item name="android:textSize">30sp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:fontFamily">@font/blackhansans_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 홈 화면 제외 모든 화면 타이틀바 & 타이틀 텍스트 -->
    <style name="TitleBar" parent="HomeTitleBar">
        <item name="android:layout_height">71dp</item>
        <item name="android:paddingLeft">22dp</item>
    </style>

    <style name="TitleText" parent="HomeTitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/blackhansans_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 구분선 -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

    <!-- 댓글달기 editText -->
    <style name="CommentEditText" parent="Text12_Regular">
        <item name="android:background">@drawable/round_comment</item>
        <item name="android:drawableRight">@drawable/ic_send</item>
        <item name="android:hint">@string/comment_hint</item>
        <item name="android:paddingLeft">19dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">#737373</item>
    </style>

    <style name="ContentText" parent="Text12_Regular">
    </style>

    <!-- 추천, 스크랩 아이콘 -->
    <style name="ReccomendIcon" >
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:background">@drawable/round_recommend_scrap</item>
        <item name="android:src">@drawable/ic_recommend_green</item>
    </style>
    <style name="ScrapIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:background">@drawable/round_recommend_scrap</item>
        <item name="android:src">@drawable/ic_scrap_green</item>
    </style>

    <!-- 추천, 스크랩 눌렀을때 아이콘 -->
    <style name="SelectedReccomendIcon" >
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:background">@drawable/round_recommend_scrap_selected</item>
        <item name="android:src">@drawable/ic_recommend_white</item>
    </style>
    <style name="SelectedScrapIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:background">@drawable/round_recommend_scrap_selected</item>
        <item name="android:src">@drawable/ic_scrap_white</item>
    </style>

    <!-- 글쓰기 보드 -->
    <style name="WritingBoardEditText" parent="Text12_Regular">
        <item name="android:background">@drawable/round_writing_board</item>
        <item name="android:hint">@string/writing_content_hint</item>
        <item name="android:gravity">top|left</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">22dp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/notosanskr_bold</item>
        <item name="android:background">@drawable/round_complete_button</item>
    </style>

    <style name="ButtonInActive" parent="Button">
        <item name="android:background">@color/gray</item>
    </style>

    <!-- 글쓰기 완료 버튼 -->
    <style name="CompleteButton" parent="Button">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:background">@drawable/round_complete_button</item>
        <item name="android:text">@string/complete</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <!-- 글쓰기 완료 버튼 클릭시 -->
    <style name="CompleteButtonSelected" parent="Button">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:background">@drawable/round_complete_button_selected</item>
        <item name="android:text">@string/complete</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- 텍스트 -->
    <!-- default textcolor black -->
    <style name="Text10_Regular">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/notosanskr_regular</item>
    </style>

    <style name="Text10_Bold" parent="Text10_Regular">
        <item name="android:fontFamily">@font/notosanskr_bold</item>
    </style>

    <style name="Text10_BoldGreen" parent="Text10_Bold">
        <item name="android:textColor">#4f5950</item>
    </style>

    <style name="Text12_Regular">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/notosanskr_regular</item>
    </style>

    <style name="Text12_Medium" parent="Text12_Regular">
        <item name="android:fontFamily">@font/notosanskr_medium</item>
    </style>

    <style name="Text12_Bold" parent="Text12_Regular">
        <item name="android:fontFamily">@font/notosanskr_bold</item>
    </style>

    <style name="Text13_Medium" parent="Text12_Medium">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Text14_Medium" parent="Text12_Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text14_Bold" parent="Text14_Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/notosanskr_bold</item>
    </style>


    <style name="Text15_Bold">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/notosanskr_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text17_Bold_Green">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/notosanskr_bold</item>
        <item name="android:textColor">@color/textColorGreen</item>
    </style>

    <style name="Text20_Gray">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/notosanskr_medium</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="Text15_Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/notosanskr_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
